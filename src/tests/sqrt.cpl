/* square root of a given number */

   a, x, delta: float;
   stop: int;

{
      input (a);
      x = a/2.0;
      stop = 3;

      while(stop == 0) {
         x = x/2.0+a/(2.0*x);
         delta =  x*x-a;
         a = a + 1;
         if(a > 5)  { stop = stop - 1;}

         if(delta < 0)  { delta = 0 - delta;} else { }
         if (delta < 0.0001)  { stop = 1;} else { }
       }
       output(a);
       output(x);
}
